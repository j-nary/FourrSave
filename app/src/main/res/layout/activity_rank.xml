<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:text="이달의 포즈왕은?"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="four, rank, share"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/like_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="좋아요 순" />
    </LinearLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#B4FFEE"
                android:gravity="center"
                android:text="Test1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#DFB2FF"
                android:gravity="center"
                android:text="Test2"/>
        </LinearLayout>
    </ScrollView>

    <!--하단바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#9ECADB">
        <ImageView
            android:id="@+id/galleryClickButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onClickNavigationBar"
            android:src="@drawable/gallery"
        />
        <ImageView
            android:id="@+id/rankClickButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onClickNavigationBar"
            android:src="@drawable/rank"
            />
        <ImageView
            android:id="@+id/scanClickButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onClickNavigationBar"
            android:src="@drawable/scan"
            />
        <ImageView
            android:id="@+id/scrapClickButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onClickNavigationBar"
            android:src="@drawable/scrap"
            />
        <ImageView
            android:id="@+id/myinfoClickButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onClickNavigationBar"
            android:src="@drawable/myinfo"
            />
    </LinearLayout>

</LinearLayout>